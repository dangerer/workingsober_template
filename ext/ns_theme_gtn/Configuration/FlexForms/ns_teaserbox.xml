<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:ns_theme_gtn/Resources/Private/Language/locallang_flex.xlf:general.fields</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <headline>
                        <TCEforms>
                            <label>LLL:EXT:ns_theme_gtn/Resources/Private/Language/locallang_flex.xlf:general.headline</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </headline>
                    <headlineType>
                        <TCEforms>
                            <label>Select Headline Type</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">H1</numIndex>
                                        <numIndex index="1">h1</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">H2</numIndex>
                                        <numIndex index="1">h2</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">H3</numIndex>
                                        <numIndex index="1">h3</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">H4</numIndex>
                                        <numIndex index="1">h4</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">H5</numIndex>
                                        <numIndex index="1">h5</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">H6</numIndex>
                                        <numIndex index="1">h6</numIndex>
                                    </numIndex>
                                </items>
                                <renderType>selectSingle</renderType>
                                <default>h2</default>
                                <size>1</size>
                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </headlineType>
                    <teaserItem>
                        <section>1</section>
                        <type>array</type>
                        <el>
                            <container>
                                <title>
                                    Add Items
                                </title>
                                <type>array</type>
                                <el>

                                    <headline>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_gtn/Resources/Private/Language/locallang_flex.xlf:general.headline</label>
                                            <config>
                                                <type>input</type>
                                                <size>30</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </headline>
                                    <subHeadline>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_gtn/Resources/Private/Language/locallang_flex.xlf:general.subheadline</label>
                                            <config>
                                                <type>input</type>
                                                <size>30</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </subHeadline>
                                     <image>
                                        <TCEforms>
                                            <label>Image</label>
                                            <config>
                                                <type>group</type>
                                                <internal_type>db</internal_type>
                                                <appearance>
                                                    <elementBrowserType>file</elementBrowserType>
                                                    <elementBrowserAllowed>jpg,jpeg,png,svg,tiff,gif,bmp,ppm,webp,heif</elementBrowserAllowed>
                                                </appearance>
                                                <allowed>sys_file</allowed>
                                                <size>1</size>
                                                <minitems>0</minitems>
                                                <maxitems>1</maxitems>
                                                <show_thumbs>1</show_thumbs>
                                            </config>
                                        </TCEforms>
                                    </image>
                                    <link>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_gtn/Resources/Private/Language/locallang_flex.xlf:general.link</label>
                                            <config>
                                                <type>input</type>
                                                <renderType>inputLink</renderType>
                                                <size>30</size>
                                                <eval>trim</eval>
                                                <softref>typolink,typolink_tag,images,url</softref>
                                                <fieldControl>
                                                    <linkPopup>
                                                        <options>
                                                            <!--<blindLinkOptions>file,mail,page,spec,url</blindLinkOptions>-->
                                                            <!--<blindLinkFields>class,params,target,title</blindLinkFields>-->
                                                        </options>
                                                    </linkPopup>
                                                </fieldControl>
                                            </config>
                                        </TCEforms>
                                    </link>
                                </el>
                            </container>
                        </el>
                    </teaserItem>
                       <bgColor>
                        <TCEforms>
                              <label>LLL:EXT:ns_theme_gtn/Resources/Private/Language/locallang_flex.xlf:general.background</label>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </bgColor>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
